<div class="container fully-spaced-row">
  <div id="template" class="medium-form" data-cc-animate>
    <div id="customer">
      <!-- Create Customer -->
      <div id="create-customer">
       

        <div class="create-form-flex">
          <div class="form-wrapper">
           <div class="template_header">
              <h2 class="title">{{ 'customer.register.title' | t }}</h2>
              <small>
                {{ 'customer.register.signup_note' | t }}
              </small>
            </div>
        {% form 'create_customer' %}
          {{ form.errors | default_errors }}

          <div class="input-row">
            <label for="first_name" class="login">{{ 'customer.register.first_name' | t }}</label>
            <input type="text" value="" name="customer[first_name]" id="first_name" class="large" size="30" />
          </div>

          <div class="input-row">
            <label for="last_name" class="login">{{ 'customer.register.last_name' | t }}</label>
            <input type="text" value="" name="customer[last_name]" id="last_name" class="large" size="30" />
          </div>

          <div class="input-row">
            <label for="email" class="login">{{ 'customer.register.email' | t }}</label>
            <input type="email" value="" name="customer[email]" id="email" class="large" size="30" />
          </div>

          <div class="input-row">
            <label for="password" class="login">{{ 'customer.register.password' | t }}</label>
            <input type="password" value="" name="customer[password]" id="password" class="large password" size="30" />
          </div>

          <div class="action_bottom">
            <button class="btn" type="submit">{{ 'customer.register.submit' | t }}</button>
            <span class="note">
              <a href="{{ routes.account_login_url }}">{{ 'customer.register.log_in' | t }}</a>
              {{ 'customer.general.or' | t }}
              <a href="{{ routes.root_url }}">{{ 'customer.register.cancel' | t }}</a>
            </span>
          </div>
        {% endform %}
      </div>
        <div class="image-wrapper">
          {{ section.settings.background_img | image_url: width: 2800 | image_tag: loading: 'lazy' }}
        </div>
      </div>
      </div><!-- /#create-customer -->
    </div>
  </div>
</div>

<style>
  .medium-form {
    max-width: 1100px;
    width: 100%;
    margin: auto;
  }

  .template_header small {
    font-size: .85em;
  }
  
  .create-form-flex {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
  }
  
  .create-form-flex .form-wrapper {
    flex: 1;
    margin: 0 20px;
  }
  
  .create-form-flex .image-wrapper {
    flex: 1;
    margin: 0 20px;
  }

  @media (max-width: 600px){
    .create-form-flex {
        flex-direction: column;
    }

    .create-form-flex .form-wrapper {
      margin: 0;
    }
    
    .create-form-flex .image-wrapper {
      margin: 0;
    }
  }
</style>

{% schema %}
  {
    "name": "Customer register",
    "settings": [
      {
        "id": "background_img",
        "type": "image_picker",
        "label": "Form Image"
      }
    ]
  }
{% endschema %}
